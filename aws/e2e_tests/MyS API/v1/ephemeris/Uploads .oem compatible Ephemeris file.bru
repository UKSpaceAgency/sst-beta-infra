meta {
  name: Uploads .oem compatible Ephemeris file
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/v1/ephemeris/
  body: multipartForm
  auth: bearer
}

headers {
  Content-Type: multipart/form-data
  Accept: application/json
}

auth:bearer {
  token: {{bearerToken}}
}

body:multipart-form {
  object_id: {{testSatellitePrimaryNorad}}
  file: @file(MEME_61604_20211101.txt)
}

tests {
  test("Status code 200", function() {
      expect(res.getStatus()).to.equal(200);
  });
  
  const resp = res.getBody();
  
  test("Message status OK", function () {
      expect(resp.status).to.equal("OK");
  });
  
  bru.setVar("testEphemerisFileName", resp.data.file_name);
}

docs {
  ## User Roles
  |User Role          |Permissions                                                      |
  |-------------------|-----------------------------------------------------------------|
  |Superuser          |Can create ephemeris files for all organizations.                |
  |Analyst            |Can create ephemeris files for all organizations.                |
  |Operator           |Can create ephemeris files for user's organization.              |
  |Organization Admin |Can create ephemeris files for user's organization.              |
  |Everyone else      |Can't create ephemeris files.                                    |
}
