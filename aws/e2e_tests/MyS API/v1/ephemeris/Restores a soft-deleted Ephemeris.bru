meta {
  name: Restores a soft-deleted Ephemeris
  type: http
  seq: 5
}

post {
  url: {{baseUrl}}/v1/ephemeris/:ephemeris_id/restore
  body: none
  auth: bearer
}

params:path {
  ephemeris_id: {{testEphemerisId}}
}

headers {
  Accept: application/json
}

auth:bearer {
  token: {{bearerToken}}
}

tests {
  test("Status code 204", function() {
      expect(res.getStatus()).to.equal(204);
  });
}

docs {
  ## Description
  Restore a soft-deleted ephemeris, mark ephemeris in DB as is_active = True.
  
  ## User Roles
  |User Role          |Permissions                                                      |
  |-------------------|-----------------------------------------------------------------|
  |Superuser          |Can restore all ephemeris.                                       |
  |Analyst            |Can restore all ephemeris.                                       |
  |Operator           |Can restore ephemeris in his organization.                       |
  |Organization Admin |Can restore ephemeris in his organization.                       |
  |Everyone else      |Can't restore any ephemeris.                                     |
}
