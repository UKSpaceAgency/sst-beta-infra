meta {
  name: Delete Banner Message
  type: http
  seq: 8
}

delete {
  url: {{baseUrl}}/v1/banners/messages/:message_id
  body: none
  auth: bearer
}

params:path {
  message_id: {{testBannerId}}
}

headers {
  Accept: application/json
}

auth:bearer {
  token: {{bearerToken}}
}

tests {
  test("Status code 204", function() {
      expect(res.getStatus()).to.equal(204);
  });
}

docs {
  ## Description
  Soft-delete (set is_active=False) a banner message.
  
  ## User Roles
  |User Role          |Permissions                                                      |
  |-------------------|-----------------------------------------------------------------|
  |Superuser          |Can delete messages.                                             |
  |Everyone else      |Can't delete messages.                                           |
}
