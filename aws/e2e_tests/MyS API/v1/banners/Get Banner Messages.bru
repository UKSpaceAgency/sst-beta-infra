meta {
  name: Get Banner Messages
  type: http
  seq: 2
}

get {
  url: {{baseUrl}}/v1/banners/messages?sort_by=created_at&show_inactive=false&limit=100&offset=0&sort_order=asc
  body: none
  auth: bearer
}

params:query {
  sort_by: created_at
  show_inactive: false
  limit: 100
  offset: 0
  sort_order: asc
}

headers {
  Accept: application/json
}

auth:bearer {
  token: {{bearerToken}}
}

tests {
  test("Status code 200", function() {
      expect(res.getStatus()).to.equal(200);
  });
  
  const resp = res.getBody();
  
  test("Banner message created earlier was retrieved", () => {
      found = false;
      targetId = bru.getVar("testBannerId");
      resp.forEach((banner) => {
          found = (found || (banner.id === targetId));
      });
      expect(found).to.be.true;
  });
}

docs {
  ## Description
  Gets list of banner messages.
  
  ## User Roles
  |User Role          |Permissions                                                      |
  |-------------------|-----------------------------------------------------------------|
  |Superuser          |Can list messages.                                               |
  |Everyone else      |Can't list messages.                                             |
}
