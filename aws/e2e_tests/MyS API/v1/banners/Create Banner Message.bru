tests {
  test("Status code 200", function() {
      expect(res.getStatus()).to.equal(200);
  });
  
  const resp = res.getBody();
  
  test("Banner ID returned in body", () => {
      expect(resp.id).to.exist;
  });
  
  bru.setVar("testBannerId", resp.id);
}

