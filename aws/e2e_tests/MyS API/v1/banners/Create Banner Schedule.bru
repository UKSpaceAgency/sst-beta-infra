meta {
  name: Create Banner Schedule
  type: http
  seq: 4
}

post {
  url: {{baseUrl}}/v1/banners/schedules
  body: json
  auth: bearer
}

headers {
  Content-Type: application/json
  Accept: application/json
}

auth:bearer {
  token: {{bearerToken}}
}

body:json {
  {
    "broadcastStart": "{{testBannerScheduleStart}}",
    "broadcastEnd": "{{testBannerScheduleEnd}}",
    "messageId": "{{testBannerId}}",
    "isActive": true
  }
}

script:pre-request {
  var currentDate = new Date();
  bru.setVar("testBannerScheduleStart",currentDate.toJSON());
  var futureDate = new Date();
  futureDate.setDate(futureDate.getDate() + 5);
  bru.setVar("testBannerScheduleEnd", futureDate.toJSON());
}

tests {
  test("Status code 200", function() {
      expect(res.getStatus()).to.equal(200);
  });
  
  const resp = res.getBody();
  
  bru.setVar("testBannerScheduleId", resp.id);
}

docs {
  ## Description
  Creates a schedule for a given banner message.
  
  ## User Roles
  |User Role          |Permissions                                                      |
  |-------------------|-----------------------------------------------------------------|
  |Superuser          |Can create a schedule.                                           |
  |Everyone else      |Can't create a schedule.                                         |
}
