meta {
  name: Modify Satellite data
  type: http
  seq: 1
}

patch {
  url: {{baseUrl}}/v1/satellites/:satellite_id
  body: json
  auth: none
}

params:path {
  satellite_id: <uuid>
}

headers {
  Content-Type: application/json
  Accept: application/json
}

body:json {
  {
    "common_name": "<string>",
    "norad_id": "<string>",
    "international_designator": "<string>",
    "object_type": "<string>",
    "license_country": "<string>",
    "launch_date": "<string>",
    "apogee": "<string>",
    "perigee": "<string>",
    "inclination": "<number>",
    "period": "<number>",
    "organization_id": "<uuid>",
    "esa_discos_id": "<string>",
    "mass": "<number>",
    "height": "<number>",
    "depth": "<number>",
    "width": "<number>",
    "diameter": "<number>",
    "span": "<number>",
    "cross_section_min": "<number>",
    "cross_section_avg": "<number>",
    "cross_section_max": "<number>",
    "shape": "<string>"
  }
}

tests {
  test("Status code 403 with misconfigured OAuth", function() {
      expect(res.getStatus()).to.equal(403);
  });
}

docs {
  ## Description
  Update Satellite data based on SpaceTrack.
  
  ## User Roles
  |User Role       |Permissions                                                      |
  |----------------|-----------------------------------------------------------------|
  |Superuser       |Can update all satellites.                                       |
  |Everyone else   |Can't update satellites.                                         |
}
