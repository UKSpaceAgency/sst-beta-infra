meta {
  name: Gets list of external datasources performance data
  type: http
  seq: 1
}

get {
  url: {{baseUrl}}/v1/external-data-performance/?max_age_days=1&limit=1
  body: none
  auth: bearer
}

params:query {
  max_age_days: 1
  limit: 1
  ~sort_by: created_at
  ~source_provider: UKSA
  ~source_type: Ephemeris
  ~offset: 0
  ~sort_order: asc
}

headers {
  Accept: application/json
}

auth:bearer {
  token: {{bearerToken}}
}

tests {
  const resp = res.getBody();
  
  const expected_keys = [
      "id",
      "createdAt",
      "updatedAt",
      "sourceProvider",
      "sourceType",
      "ingestionStart",
      "ingestionEnd",
      "itemsFetched"
  ];
  
  test("Status code 200", function() {
      expect(res.getStatus()).to.equal(200);
  });
  
  test("Performances returned contain expected fields", () => {
      resp.forEach(function (analysis) {
          expect(analysis).to.have.all.keys(expected_keys)
          });
  });
}
